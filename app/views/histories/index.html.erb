<p id="notice"><%= notice %></p>

<h1>Rental History</h1>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Location</th>
    <th>Model</th>
    <th>Manufacturer</th>
    <th>Style</th>
    <th>License_NO</th>
    <th>Rental_Rate</th>
    <th>Start from</th>
    <th>End in</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @history.each do |history| %>
      <tr>

        <td><%= history.location %></td>
        <td><%= history.model %></td>
        <td><%= history.manufacturer %></td>
        <td><%= history.style %></td>
        <td><%= history.license_number %></td>
        <td><%= history.rental_rate %></td>
        <td><%= history.start %></td>
        <td><%= history.end %></td>

        <% if (current_user.role!='user') %>
            <td><%= link_to 'Edit', edit_history_path(history) %></td>
            <% if history.end!=nil %>
                <td><%= link_to 'Destroy', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
            <%end%>

      </tr>
  <% end %>
  </tbody>
</table>

<br>

<li><%= link_to "Back To Home page", current_user%></li>

