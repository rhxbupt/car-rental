    <div class="field">
      <%= form.label :rental_rate %>
      <%= form.text_field :rental_rate, id: :car_rental_rate %>
    </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :car_location %>
  </div>

  <div class="field">
    <%= form.label :model %>
    <%= form.text_field :model, id: :car_model %>
  </div>

  <div class="field">
    <%= form.label :manufacturer %>
    <%= form.text_field :manufacturer, id: :car_manufacturer %>
  </div>

  <div class="field">
    <%= form.label :style %>
    <%= form.select :style,  options_for_select([['Sedan','Sedan'],['Coupe','Coupe'],['SUV','SUV']])%>

